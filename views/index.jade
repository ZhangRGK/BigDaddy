html
    head
        title BigDaddy is watching you...
        link(rel="stylesheet",href="/bootstrap/css/bootstrap.min.css")
        meta(name="viewport",content="width=device-width,initial-scale=1.0")
    body
        header.navbar.navbar-default.navbar-fixed-top
            .container
                .navbar-header
                    button.navbar-toggle(type="button",data-toggle="collapse",data-target=".bd_datetimepicker")
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='#') BigDaddy
                .collapse.navbar-collapse.bd_datetimepicker
                    form.navbar-form
                        .form-group
                            input.form-control(id="start_date",type="date",placeholder="yyyy-mm-dd")
        .container(style="padding-top:60px")
            .alert.alert-danger.hidden
            table.table.table-hover
                thead
                    tr
                        td &nbsp;
                        td.firstDay 第一天
                        td.secondDay.visible-sm.visible-md.visible-lg 第二天
                        td.thirdDay.visible-sm.visible-md.visible-lg 第三天
                        td.fourthDay.visible-md.visible-lg 第四天
                        td.fifthDay.visible-md.visible-lg 第五天
                        td.sixthDay.visible-lg 第六天
                        td.seventhDay.visible-lg 第七天
                tbody(id="content")
        script(src="/javascripts/lib/jquery-1.11.0.js")
        script(src="/bootstrap/js/bootstrap.min.js")
        script(src="javascripts/index.js")